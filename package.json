{
  "name": "mola",
  "version": "1.0.0",
  "description": "mola & mola's friends",
  "main": "lib/index.js",
  "scripts": {
    "start": "node tools/server.js",
    "build": "rimraf lib & gulp build",
    "lint": "fecs src",
    "prepublish": "npm run lint && npm run rebuild",
    "test": "NODE_ENV=test karma start ./test/karma.local.conf.js",
    "test-ci": "NODE_ENV=test karma start ./test/karma.travis.conf.js",
    "coveralls": "cat test/coverage/lcov/lcov.info | ./node_modules/.bin/coveralls",
    "docs": "esdoc -c esdoc.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/react-melon/melon-colorpicker.git"
  },
  "keywords": [
    "react",
    "melon",
    "color",
    "picker",
    "color-picker"
  ],
  "author": "leon <ludafa@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/react-melon/melon-colorpicker/issues"
  },
  "homepage": "https://github.com/react-melon/melon-colorpicker#readme",
  "dependencies": {
    "react": "^0.14",
    "react-dom": "^0.14"
  },
  "devDependencies": {
    "babel-istanbul": "^0.11.0",
    "babel-loader": "^6.2.6",
    "babel-plugin-external-helpers": "^6.8.0",
    "babel-plugin-external-helpers-insert-require": "^1.0.0",
    "babel-plugin-transform-es2015-modules-umd": "^6.12.0",
    "babel-plugin-transform-es3-member-expression-literals": "^6.8.0",
    "babel-plugin-transform-es3-property-literals": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-1": "^6.13.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "browserify-istanbul": "^2.0.0",
    "coveralls": "^2.11.12",
    "esdoc": "^0.4.8",
    "esdoc-es7-plugin": "0.0.3",
    "fecs": "^0.8.6",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-babel-external-helpers": "^2.0.2",
    "gulp-clean": "^0.3.2",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-stylus": "^2.5.0",
    "jasmine": "^2.4.1",
    "karma": "^1.2.0",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-browserify": "^5.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-sauce-launcher": "^1.0.0",
    "nib": "^1.1.2",
    "rimraf": "^2.5.4",
    "stylus": "^0.54.5",
    "webpack": "^1.13.3"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-1",
      "react"
    ]
  },
  "babelBuild": {
    "presets": [
      [
        "es2015",
        {
          "loose": true,
          "modules": "umd"
        }
      ],
      "stage-1",
      "react"
    ],
    "plugins": [
      "external-helpers",
      "external-helpers-insert-require",
      "transform-es3-property-literals",
      "transform-es3-member-expression-literals"
    ]
  }
}
